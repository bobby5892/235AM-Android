<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_padding"
                android:background="?android:attr/colorBackground"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/error_panel">
  <TextView
    android:id="@+id/error_text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:drawablePadding="@dimen/textview_drawablePadding"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:drawableTint="@color/error"
    android:drawableTop="@drawable/ic_error"
    android:text="ERROR MESSAGE"
    android:gravity="center" />
  <TextView
    android:id="@+id/error_text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_below="@+id/error_text1"
    android:drawablePadding="@dimen/textview_drawablePadding"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:drawableTint="@color/error"
    android:text="ERROR CODE 999"
    android:gravity="center"
    android:paddingTop="6dp" />
  <Button xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/failed_scan_again_button"
          android:layout_below="@+id/error_text2"
          android:text="@string/scan_fingerprint_try_again"
          android:layout_marginTop="6dp" />
</RelativeLayout>